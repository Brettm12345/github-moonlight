.dropdown-
  &divider
    c 0 $base1
  &signed-commit &menu-w
    caret "left" $base2
  &menu
    &, &-dark
      c $text $base1 $base4
      .octicon
        c $indigo
        o 0.6
        mb 3px
        mr 2px
      &-ne, &-nw, &-n
        caret "top" $base5
      &-sw, &-se, &-s
        caret "bottom"
      &-w
        caret "right"
      &-e
        caret "left" $base2
  &header
    c $faded
  &item
    c $text
    ease background-color, color
    &:hover, &:focus
      c $cn 0 $base8
