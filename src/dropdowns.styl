.dropdown-
  &divider
    c 0 base(1)
  &signed-commit &menu-w
    caret "left" base(2)
  &menu
    &, &-dark
      c fg("primary") base(1) base(4)
      .octicon
        c v("indigo")
        o 0.6
        mb 3px
        mr 2px
        &-check
          c v("green")
      &-ne, &-nw, &-n
        caret "top" base(5)
      &-sw, &-se, &-s
        caret "bottom"
      &-w, &-e
        caret "left" base(2)
  &header
    c fg("faded")
  &item
    c fg("primary")
    ease background, color, background-color
    &:hover, &:focus
      c fg("light") 0 base(6)
