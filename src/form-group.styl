input
  caret-color v("blue")
  &[type="text"]
    c fg("light") base(1) base(3)
    ease background-color, border-color
    &:focus
      c 0 v("blue") base(5)
.input-contrast
  box()
.form-
  &group &control
    c fg("light") base(1) base(4)
    .search-input
      caret-color v("blue")
    &:focus
      c 0 v("blue") base(7)
      .form-control, .ais-SearchBox-input, .form-select
        &.focus, &:focus
          c 0 v("blue")
          shadow none
  &control
    &, ../select
      ../.search-page-label.js-advanced-search-label
        &, & input
          c 0 0 base(5)
      c fg("light") base(1) base(4)
      shadow none
      &.focus, &:focus
        c fg("light") v("blue") 0
        shadow none
.write-content.js-write-bucket
  shadow none
