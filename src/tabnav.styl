.tabnav
  bb $b
  &-tabs
    margin-bottom -2px
  &-tab
    ~/-extra, &
      c fg("faded")
    ~/--responsive &, &
      c fg("dark")
      ease colors
      rt 6px
      &[aria-current]
        c 0 1
      &:hover, &:focus
        c fg("primary")
      +selected()
        c fg("light") 1 2
      +selected(false)
        c 0 0 3
        bb $b
