.tabnav
  bb $b
  &-extra, &-tab
    c fg("faded")
  &-pr &-tab
    &.selected, &[aria-selected="true"], &[aria-current]
      c 0 0 2
  &-tabs
    & ^[0]-tab
      &:not(.selected)
        c fg("dark")
      &.selected
        c fg("light") 0 2
  &--responsive &-tab, &-tab
    c fg("faded")
    ease color
    rt 6px
    &[aria-selected="false"]
      bb $b
    &:hover, &:focus
      c fg("primary")
    &.selected, &[aria-selected="true"], &[aria-current]
      c fg("light") 1 3
      bbc $t
      &.js-blob-edit-
        &code, &preview
          c 0 0 3
