.content
  c fg("primary")
.sidebar-menu
  &, h3, ul ul li
    c fg("primary") 1 4
    &:hover, & a:hover
      c fg("light") 1 6
.js-current .standalone a
  blc v("blue")
  c fg("light") 0 5
.sidebar-module .disable > a
  c fg("light") 1 5
.sub-nav
  c 0 1
body table
  th
    c fg("primary") 1 2
  tr td
    c fg("primary") 1 4
  c fg("primary") 1 4
.alert
  &.tip
    c fg("primary") v("teal") t("teal")
  &.note
    c fg("primary") v("blue") t("blue")
  &.warning
    c fg("primary") v("yellow") t("yellow")
  &.product
    bg t("purple")
    c fg("primary") v("purple") t("purple")
h1, h2, h3, h4, h5, h6
  c fg("primary")
.content ol li pre code
  c 0 0 2
  p 8px
ol > li::before
  brc base(1)
  c fg("primary")
.octokit-language span,
.lead
  c fg("faded")
.libraries-jumbotron
  c fg("primary") 1 2
.sidebar-module
  c 0 1 5
.command-line
  em
    c v("blue")
    td underline
  span
    &.comment
      c v("indigo")
    &.output
      c fg("gray")
.content .sectionbody .dlist dt, .content .verseblock-content, .content dl code, .content h2 code, .content h3 code, .content h4 code, .content ol code, .content p > tt, .content table code, .content ul code, p code,
pre
  c fg("primary") 1 5
.headlines > li
  cursor pointer
  ease background-color, color
  &:hover
    c 0 0 7
  &, .sidebar-module ul h3
    c fg("primary") 1
.published span
  c fg("secondary")
.headlines > li > a > .date
  c fg("dark")
.meta li
  c fg("faded")
.sub-nav ul
  & a
    ease color
    c fg("faded")
    &.active
      c fg("light")
      fw 500
    &:hover
      c fg("primary")
  &, & a.active
    blc base(6)
.site-header-nav .dropdown-menu
  caret "bottom"
  a
    ease background-color, color
    &:hover
      c fg("light") 0 3
