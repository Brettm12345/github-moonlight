.commit
  &-loader .loader-error
    c v("red")
  &-link
    c v("yellow")
  &-author-section
    c v("blue")
  &-desc
    &+^[0]-branches
      btc base(1)
    pre
      c fg("paragraph") 0 2
  &-icon .octicon, &-group-title .octicon-git-commit
    c fg("primary") 0 4
  &s-list-item
    &, &:hover
      c 0 0 $t
    &+&
      btc base(1)
  &-ref
    c fg("primary") 1 2
    set-font "mono"
    .user
      c v("blue")
  &-sha
    c v("yellow") 1 5
  & &-title .issue-link
    c v("blue")
  & &-title, &-group-title, a
    c fg("primary")
  &-tease
    c v("blue") 1 4
    &-sha
      c v("blue")
    &-contributors
      bt $b
      c 0 0 9
.commits
  blockquote
    c fg("primary")
  &-listing:before
    c 0 0 5
  &-list-item
    c 0 0 4
    &+&
      btc base(1)
    &.navigation-focus
      c 0 0 5
    .commit-
      &desc pre, &author
        c fg("faded")
.full-commit
  c v("blue") 1 4
  .branches-list li
    c fg("gray")
    &.loading, &.pull-request
      c fg("faded")
  .btn-outline
    &:not(:disabled):hover
      c v("blue") v("blue")
    &, &:disabled
      c 0 1
  p.commit-title
    c v("blue")
  .sha-block
    c fg("faded")
    fs 14px
    fw 500
    & > a
      c fg("primary") 6
      &:hover
        c 0 1
    & > .sha
      c v("blue")
  .commit-meta
    c 0 1 4
.file-commit-form--full
  c fg("primary") 1 2
.commit-form
  c 0 0 4
  caret "right"
.line-comments
  c 0 0 5
  /.diff-table tr:not(:last-child) &
    c 0 1
  /.empty-cell + &, & + &
    blc base(1)
.commit-build-statuses
  c fg("faded")
  &:hover
    c v("blue")
-expander
  .ellipsis&, .hidden-text& a
    c fg("primary") 0 7
