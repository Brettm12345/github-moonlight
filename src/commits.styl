.commit
  &-loader .loader-error
    c $red
  &-link
    c $yellow
  &-author-section
    c $blue
  &-desc
    &+^[0]-branches
      btc base(1)
    pre
      c fg("primary") 0 base(4)
  &-icon .octicon, &-group-title .octicon-git-commit
    c fg("primary") 0 base(4)
  &s-list-item
    &, &:hover
      c 0 0 $t
    &+&
      btc base(1)
  &-ref
    c fg("primary") base(1) base(2)
    set-font "mono"
    .user
      c $blue
  &-sha
    c $yellow base(1) base(5)
  & &-title .issue-link
    c $blue
  & &-title, &-group-title, a
    c fg("primary")
  &-tease
    c $blue base(1) base(4)
    &-sha
      c $blue
    &-contributors
      bt $b
      c 0 0 base(9)
.commits
  blockquote
    c fg("primary")
  &-listing:before
    c 0 0 base(5)
  &-list-item
    c 0 0 base(4)
    &+&
      btc base(1)
    &.navigation-focus
      c 0 0 base(5)
    .commit-
      &desc pre, &author
        c fg("faded")
.full-commit
  c $blue base(1) base(4)
  .branches-list li
    c fg("gray")
    &.loading, &.pull-request
      c fg("faded")
  .btn-outline
    &:not(:disabled):hover
      c $blue $blue
    &, &:disabled
      c 0 base(1)
  p.commit-title
    c $blue
  .sha-block
    c fg("faded")
    fs 14px
    fw 500
    & > a
      c fg("primary") base(6)
      &:hover
        c 0 base(1)
    & > .sha
      c $blue
  .commit-meta
    c 0 base(1) base(5)
.file-commit-form--full
  c fg("primary") base(1) base(2)
.commit-form
  c 0 0 base(4)
  caret "right"
.line-comments
  c 0 0 base(5)
  /.diff-table tr:not(:last-child) &
    c 0 base(1)
  /.empty-cell + &, & + &
    blc base(1)
div.commit-build-statuses, .link-gray
  c fg("faded")
  &:hover
    c $blue
  &-dark, body &-dark
    c $blue
    &:hover, body &:hover
      td underline
-expander
  .ellipsis&, .hidden-text& a
    c fg("primary") 0 base(7)
