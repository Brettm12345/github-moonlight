.SelectMenu-
  &closeButton
    c fg("faded")
  &header
    bbc base(1)
  &filter
    btc base(1)
  &icon--check
    c v("green")
  &divider
    c fg("primary") 1 2
  &list
    c 0 1 3
  &modal
    elevation 2
  &item, &modal
    c 0 1 4
  &blankslate, &loading, &message
    c fg("primary") 1 4
  &footer
    c fg("primary") 1 4
    kbd
      fs unset
  &item
    c fg("primary") 1
    ease colors
    @media (hover: hover)
      &:not([aria-selected="true"])
        &:hover
          c fg("light") 0 7
        &:active
          c fg("light") 0 8
      &:hover
        c 0 0 5
      &:active
        c 0 0 3
      &:focus
        c 0 0 6
    +checked()
      c fg("light")
  &tabs
    btc base(1)
  &tab
    c fg("primary") 1 2
    +selected()
      c fg("light") 1 4
      @media (min-width: 544px)
        c 0 1
    +checked(false)
      &:active, &:hover
        @media(hover: hover)
          c 0 2
.select-menu-
  &button.primary
    &:after
      btc base(2)
    &:active
      c 0 v("green") t("green")
  &blankslate
    h3
      c fg("primary")
    svg
      vc fg("secondary")
  &loading-overlay
    c 0 0 2
  &header
    octicon fg("faded")
  &action
    c fg("faded")
    ease colors
    hover v("blue")
  &header, &header &title
    c fg("light") 1 2
   &divider, &modal, &item
    c fg("primary") 1 4
  &filters
    c fg("primary") 1 3
  &no-results
    c fg("faded") 1 4
  &text-filter
    +edges()
      c 0 1
    &::placeholder
      c fg("placeholder")
  &new-item-form .octicon
    c v("blue")
  &item
    ease colors
    hover 0 0 6
    .excluded
      c 0 0 3
    .octicon-circle-slash
      &, ^[1].selected &^[1]-icon
        c fg("faded")
    +disabled()
      &, & .description
        c fg("faded")
        o 0.6
    &-text .description
      &, &-inline
        c fg("faded")
      &-warning
        c v("red")
  &tabs
    c 0 1
    ^[0]tab-nav, & a
      c fg("dark")
      ease colors
      hover fg("primary")
      +selected()
        bc base(1) base(1) base(4)
        c fg("light") 0 4
