*:not(code) .Box
  c 0 1 3
.Box
  .bg-white
    c 0 0 $t
  &.md
    c 0 0 4
  &-body
    c 0 1
    &:last-of-type
      bb none
    .topic-tag
      c 0 0 3
    .help
      c fg("faded")
  &--overlay
    c 0 1 2
    elevation 1
  /:not(code) &&--responsive
    &, & ^[0]-header
      c 0 0 3
  &-header
    c 0 1 2
    &&--blue
      c v("blue") 1 4
  &-footer
    c 0 1
  &-row
    btc 1
    /^[0] > ul > &
      btc 1
    &--unread
      shadow inset 2px 0 0 v("blue")
    &[style*="background"]
      c 0 0 8
    &:first-of-type
      bt 0
  &&--condensed
    & ^[0]-header
      c 0 0 3
      &--blue
        c 0 0 4
      & + ul
        br $b
    & ^[0]-row
      c 0 1 3
  &-row--
    &gray
      c o o 4
    &focus-gray
      c 0 0 3
      +nav-focus()
        c 0 0 6
    &yellow
      c fg("primary") 6 $t
    ../--responsive &unread::before
      bgi none
      c 0 0 v("blue")
.tint-box
  c 0 0 4
.body > div.d-flex
  px 10px
