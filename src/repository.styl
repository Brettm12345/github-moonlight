.branch-infobar
  c fg("placeholder") base(1) base(4)
.num
  c fg("secondary")
.social-count
  c v("blue") base(1) base(5)
  &:hover
    c fg("light")
.js-recent-activity-container > div > div,
.repository-content > div.bg-white:first-child
  c 0 0 base(2)
#readme
  .Box-header
    ease background-color
    c 0 base(1) base(3)
    o 1
    &:hover
      c 0 0 base(2)
    .octicon-pencil
      c v("indigo")
      ease color
      ../:hover ^[2..-1]
        c v("blue")
table
  &.files
    c fg("primary") base(1) base(4)
    tr
      ease background-color
      &.navigation-focus, &[aria-selected=true]
        td
          c 0 0 base(6)
      &.up-tree
        c 0 base(1)
        a
          b 1px solid $t
          ease background-color, border-color, color
          &:hover, &:focus
            b $b
            c v("blue") base(1) base(2)
            td none
      td
        c 0 base(1)
        &.message
          c fg("faded")
        &.age, &.icon
          c fg("primary")
