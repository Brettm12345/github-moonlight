.Toast
  b $b
  elevation 2
  &--error &-icon
    c 0 0 $red
  &--warning &-icon
    c base(2) 0 $yellow
  &--success &-icon
    .octicon-check
      c base(2)
    c base(2) 0 $teal
  &, &-content
    c fg("primary") base(1) base(4)
  &-dismissButton
    c fg("faded") base(1) base(2)
    max-height none
    min-height 100%
    &:focus, &:hover, &:active
      c $red
