.gitako-
  &ready .js-header-wrapper
    c 0 0 base(2)
  &toggle-show-button-wrapper
    .action-icon
      .octicon
        ease color, opacity
        o 0.2
        &:hover
          c $blue
          o 1
    &.collapsed
      c 0 base(1) base(5)
      m 1%
      .action-icon
        c $blue
  &side-bar
    &, ../resize-handler
      c 0 base(1) base(1)
    & &-body
      brc base(1)
      c 0 base(1) base(4)
      .octicon
        c $indigo
        ease color, opacity
        o 0.4
        &:hover, &:focus
          c $blue
          o 1
      .gitako-settings-bar
        &-title
          btc base(1)
        &-content .shadow-shelter
          c 0 base(1) base(4)
        &, .header-row
          c fg("primary") base(1) base(4)
      &, ../-content
        .meta-bar
          c fg("primary") base(1) base(4)
        .file-explorer
          .search-input-wrapper input[type="text"].form-control
            b 1px
            r 0
          .no-results
            c fg("faded")
          .node-item
            c fg("primary") base(1)
            &-row
              c 0 0 base(5)
