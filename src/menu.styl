.menu
  c fg("primary") base(1) base(4)
  &, .blankslate
    c base(4) base(1)
  &-heading
    c fg("gray") base(1) base(4)
  &-item
    bb $b
    ease background-color, border-color, color
    &:hover
      c 0 0 base(6)
    &.selected, &[aria-current]
      c v("blue") 0 base(5)
      &::before
        c 0 0 v("blue")
      &:hover
        c 0 0 base(6)
