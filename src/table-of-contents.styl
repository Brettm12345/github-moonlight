$iconColors = {
  removed: "red"
  renamed: "cyan"
  modified: "purple"
  added: "green"
}

.toc-select
  .select-menu
    &-item
      &-text
        c fg("light")
      &-icon
        colors $iconColors '.octicon-diff-'
.table-of-contents
  li
    & + &
      btc base(1)

.select-menu-item + .semantic-toc-file:after,
.semantic-toc-symbol:not(.last-visible):after
  c 0 1 3
