  for $k, $v in $syntaxTokens
    &{$k} a
      c v($v)
  &sr &sre, &sr &sra
    c v("green")
  &s &v
    c fg("primary")
  &s1 &kos
    c v("cyan")
  &s > &smi
    c alt("red")
  &s &pse &s1
    c v("cyan")
  &sr &cce
    c alt("red")
    fw bold
  &c2, &ii
    c fg("light") 0 v("red")
