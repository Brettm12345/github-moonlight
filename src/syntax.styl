    content "^M"
  &mh &en
    c v("cyan")
  for $x in ("md" "red") ("mi1" "teal") ("mc" "cyan")
    &{$x[0]}
      c v($x[1]) 0 t($x[1])
  &mdr
    fw bold
  &corl
    td underline
