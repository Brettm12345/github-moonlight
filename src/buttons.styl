.btn
  &, &&-sm
    bgi none
    c fg("light") base(1) base(5)
    ease background-color, border-color
    &:disabled
      &, &:hover
        c fg("faded") base(1) base(5)
    &:hover
      bgi none
      c fg("light") $blue base(7)
  &&-outline
    &.BtnGroup-item, &.tooltipped.tooltipped-sw
      c 0 0 base(3)
  &-mktg
    c fg("light") base(1) rgba(black, 0.1)
  &-octicon
    c $blue
    &:hover
      c fg("light")
    &-danger:hover
      c $red
