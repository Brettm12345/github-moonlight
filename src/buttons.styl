.btn
  &, &&-sm
    bgi none
    c fg("light") base(1) base(5)
    ease background-color, border-color
    &:disabled
      &, &:hover, &:focus
        c fg("faded") base(1) base(5)
    &:hover, &:focus
      bgi none
      c fg("light") 0 base(7)
      shadow none
  &&-outline
    &, &.BtnGroup-item, &.tooltipped.tooltipped-sw
      ease all
      c 0 0 base(3)
      &:hover, &:focus
        c 0 0 base(5)
  &-mktg
    c fg("light") base(1) rgba(black, 0.1)
  &-octicon
    c v("blue")
    &:hover, &:focus
      c fg("light")
    &-danger
      &:hover, &:focus
        c v("red")
