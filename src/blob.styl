blob($x, $c, $b)
  .blob-
    &code, &num
      &&-{$x}, &-{$x}
        c $c 0 t($b)
        .blob-code-marker::before
          c $c
        .x
          c base(1) 0 $c


blob('addition', $teal, 'teal')
blob('deletion', $red, 'red')

      
.blob-
  &code, &num
    &-expandable, &-hunk
      c 0 0 base(4)
  &code-
    &inner
      c fg("primary")
      fs 15px
      lh 1.8
      mono()
      &.highlighted, & .highlighted
        c 0 0 base(8)
  &num
    c base(9) base(1) base(4)
    fw 600
    &-expandable
      .diff, .directional
        &-expander:hover
          c 0 $blue $blue
  &expanded
    & + tr:not(&), tr:not(&) + &
      ~/code, ~/num
        c 0 base(1) base(4)
.CopyBlock
  b 1px solid $t
  ease border-color, background-color
  &:active, &:focus, &:hover
    c 0 base(1) base(7)
