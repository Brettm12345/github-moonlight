.tag-info
  c v("blue")
  ../-name
    c fg("primary")
.topic-
  &box.bg-white
    ease background-color, transform
    c 0 0 base(4)
    &:hover
      c 0 0 base(5)
  &list-item
    &+&
      btc base(1)
  &tag
    b $b
    c fg("primary") base(1) base(4)
    ease background-color
    &-outline
      shadow inset 0 0 0 1px base(1)
    &-link
      &:hover, &:focus
        c fg("light") 0 base(7)
    &-action
      &, button, a
        c v("blue") v("blue") t("blue")
