.notification-
  &navigation.bg-white
    c 0 0 2
  &configure-filters
    octicon base(9)
  &navigation &configure-filters
    octicon fg("primary")
    &:hover, &:focus
      octicon v("blue")
.notifications-
  &list-item
    &.notification-unread
      c 0 1 4
    & &-actions svg
      vc fg("primary")
    &:hover, &:focus, &.navigation-focus
      c 0 0 5
      .notification-list-item-actions .btn
        ease colors
        &:hover
          c fg("light") 1 1
  &dropdown
    c 0 1 1
    .notifications-list
      mb 0
    &-arrow
      c 0 4
    &, &-see-all
      bt $b
      c 0 1 8
.thread-subscription-status
  c fg("primary") 1 2
