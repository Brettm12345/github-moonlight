.issue-
  &keyword, &meta-section .octicon
    c $purple
  &meta-section .octicon
    va middle
.IssueLabel
  &, & > a[style*="#000"]
    c base(2)
.issues-reset-query-icon
  c 0 0 base(7)
.js-selected-navigation-item.subnav-item, .js-issue-row
  ease background-color
  &.Box-row--focus-gray
    c 0 0 base(4)
    &:hover
      c 0 0 base(5)
.pinned-issue-item
  c 0 base(1) base(5)
.reaction-
  &sort-item
    c 0 base(2)
    ease background-color, border-color
    &:hover, &:focus
      c 0 $blue t("blue")
  &summary-item
    c 0 0 base(4)
