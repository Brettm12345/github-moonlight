.status-meta
  c fg("faded")
.branch-
  &name
    c fg("primary") base(1) base(8)
  &action-
    &state-clean
      ../body::before ^[2..-1]
        brc base(5)
    &item
      & + &, & + .mergeability-details
        c 0 base(1)
      &-icon.completeness-indicator
        .octicon
          vc base(1)
        &-success
          c base(1) 0 $green
        &-error
          c base(1) 0 $red
        &-problem
          c base(1) 0 $yellow
    &state-clean &icon
      c 0 0 $teal
      .octicon
        vc base(1)
    &body
      b 0
      c 0 base(1) base(4)
      caret "right"
      .merge-
        &branch-form, &message
          c 0 base(1) base(4)
