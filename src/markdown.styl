.markdown-body
  lh 1.9
  del
    c base(9)
  /.js-commit-preview &
    c 0 0 base(5)
  .lead-mktg p
    c fg("faded")
  a
    c fg("secondary")
    ease color
    td underline
    &:hover
      c $blue
  .absent
    c $red
  img
    c 0 0 base(3)
  hr
    c 0 0 base(1)
  table
    th
      c fg("primary") base(1)
      background-color base(2)
    td, th
      c 0 base(1)
    tr
      &, &:nth-child(2n)
        background-color base(3)
      td
        c fg("primary") base(1) base(3)
  p
    c fg("paragraph")
  pre > code
    c 0 0 $t
  .csv-data
    .blob-num
      c 0 base(3)
    th
      c 0 base(4)
  code, tt
    b $b
    c fg("light") base(1) base(7)
    fw 500
    m 0.4em
    mono()
    white-space nowrap
  h6
    c fg("faded")
  h1, h2, h3, h4, h5, h6
    c 0 base(1)
    .octicon-link
      c $cyan
      o 0
      visibility visible
      transform scale(1.1)
    &:hover .octicon-link
      o 1
  /.highlight pre, pre
    b $b
    c 0 base(1) base(3)
    fw 500
    mono()
  span.frame
    & > span
      c 0 base(1)
    span span
      c fg("secondary")
  blockquote
    bg linear-gradient(to right, base(6), base(3))
    c 0 base(7) base(5)
    p
      c fg("dark")
  .clippy-wrapper .clippy
    c fg("light") base(1) base(4)
    ease border-color, background-color
    &:hover
      c 0 $blue base(8)
    .icon
      inv()
