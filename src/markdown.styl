.markdown-body
  lh 1.9
  del
    c $base9
  /.js-commit-preview &
    c 0 0 $base5
  .lead-mktg p
    c $faded
  a
    c $textAlt
    ease color
    td underline
    &:hover
      c $blue
  .absent
    c $red
  img
    c 0 0 $base3
  hr
    c 0 0 $base1
  table
    td, th
      c 0 $base1
    tr td
      c $text $base1 $base3
  p
    c $textParagraph
  pre > code
    c 0 0 $t
  .csv-data
    .blob-num
      c 0 $base3
    th
      c 0 $base4
  code, tt
    b $b
    c $cn $base1 $base7
    fw 500
    m 0.4em
    mono()
    white-space nowrap
  h6
    c $faded
  h1, h2, h3, h4, h5, h6
    c 0 $base1
    .octicon-link
      c $cyan
      o 0
      visibility visible
      transform scale(1.1)
    &:hover .octicon-link
      o 1
  /.highlight pre, pre
    b $b
    c 0 $base1 $base3
    fw 500
    mono()
  span.frame
    & > span
      c 0 $base1
    span span
      c $textAlt
  blockquote
    bg linear-gradient(to right, $base6, $base3)
    c 0 $base7 $base5
    p
      c $textDark
  .clippy-wrapper .clippy
    c $cn $base1 $base4
    ease border-color, background-color
    &:hover
      c 0 $blue $base8
    .icon
      inv()
