::selection
  bd selection('border')
  c selection('fg') 0 selection('bg')
::placeholder
  c fg("placeholder")
body
  c fg("primary") 0 2
  lh 1.8
  set-font "ui"
h1, h2, h3, h4, h5
  c fg("primary")
mark
  c v("yellow")
kbd
  c fg("primary") 1 2
  fs 14px
  shadow inset 0 -1px 0 base(1)
legend
  fs 0.9em
  fw 600
fieldset
  bd $b
  mg 0
  mb 6px
  pd 10px
  r 6px
p
  color fg("paragraph")
hr
  bb $b
relative-time
  c fg("secondary")
code, pre, tt, .text-mono, kbd
  set-font "mono"
