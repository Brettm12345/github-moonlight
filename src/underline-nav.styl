.UnderlineNav
  c 0 1 3
  ease background-color, border-color
  /nav& + div.border.d-md-block
    c 0 0 4
  &[style*="margin-top"]
    c 0 $t 2
  &-item
    ^[0]-octicon
      c fg("faded")
      ease color
    &.selected, &[aria-current], &[role="tab"][aria-selected="true"]
      bbc v("blue")
      ease border-color, color
      octicon fg("light")
    &:hover, &:focus
      bbc base(8)
      octicon fg("primary")
