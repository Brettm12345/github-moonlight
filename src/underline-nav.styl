.UnderlineNav
  c 0 base(1) base(3)
  ease background-color, border-color
  /nav& + div.border.d-md-block
    c 0 0 base(4)
  &[style*="margin-top"]
    c 0 $t base(2)
  &-item
    ~/-octicon
      c fg("faded")
      ../.selected &
        c fg("light")
    &.selected
      bbc $blue
    &:hover
      bbc base(8)
