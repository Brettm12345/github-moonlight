$replacements = {
  text: {
    gray-light: "text-dark"
    blue: "blue"
    blue-mktg: "blue"
    gray: "text-primary"
    gray-dark: "text-light"
    gray-9: 9
    emphasized: "text-secondary"
    green: "green"
    purple: "purple"
    red: "red"
    white: "text-light"
  }
  border: {
    blue-light: "blue"
    gray-dark: 1
    lg-left: 6
    lg-top: 6
    lg-right: 6
    lg-bottom: 6
  }
  bg: {
    gray: 4
    gray-light: 3
    blue-light: 5
    yellow-light: "yellow-transparent"
    purple-light: "purple-transparent"
    purple: "purple"
    red: "red"
    green: "green"
    blue: 7
    blue-2: "blue-transparent"
    gray-dark: 2
    gray-2: 7
    pending: "purple"
    white: rgba(white, 0.008)
  }
}
for $x in ('text' c) ('border' bc) ('bg' bgc)
  set(s('.%s-%s', unquote($x[0]), unquote($k)), $x[1], v($v)) for $k, $v in $replacements[$x[0]]
for $direction in top left right bottom
  $x = 'border-' + $direction
  .{$x}
    {$x} 1px solid base(5) $i
.border
  bd $b
.text
  c fg("faded")
div[style*="#fcfdfd"]
  c 0 0 4
g, path
  &[fill="#eee"]
    vc 7
  &[stroke="#23292f"]
    vc 0 fg("primary")
  &[fill="#23292f"]
    vc fg("primary")
    & + path
      vc 9
section[style*="#fafbfc"]
  c 0 0 2
.selected-color-white
  c fg("light")
.bg-
  &dots-gray
    bg url('/images/modules/site/patterns/dots-small.svg') base(2)
    background-blend-mode color-burn
  &green
    octicon base(1)
  &yellow-light
    c v("yellow")
.rounded-1, .box-shadow, .Box
  borders 1
