colors(
  {
    gray-light: "text-dark"
    blue: "blue"
    blue-mktg: "blue"
    gray: "text-primary"
    gray-dark: "text-light"
    gray-9: 9
    emphasized: "text-secondary"
    green: "green"
    purple: "purple"
    red: "red"
    white: "text-light"
  },
  'text-'
)

borders(
  {
    blue-light: "blue"
    gray-dark: 1
    lg-left: 6
    lg-top: 6
    lg-right: 6
    lg-bottom: 6
  },
  'border-'
)

backgrounds(
  {
    gray: 4
    gray-light: 3
    blue-light: 5
    yellow-light: "yellow-transparent"
    purple-light: "purple-transparent"
    purple: "purple"
    red: "red"
    green: "green"
    blue: 7
    blue-2: "blue-transparent"
    gray-dark: 2
    gray-2: 7
    pending: "purple"
    white: rgba(white, 0.008)
  },
  'bg-'
)
for $direction in top left right bottom
  $x = 'border-' + $direction
  .{$x}
    {$x} 1px solid base(5) $i
.border
  b $b
.text
  c fg("faded")
div[style*="#fcfdfd"]
  c 0 0 4
g[fill="#23292f"] + path
  vc base(9)
g, path
  &[fill="#eee"]
    vc base(7)
  &[stroke="#23292f"]
    vc 0 fg("primary")
  &[fill="#23292f"]
    vc fg("primary")
section[style*="#fafbfc"]
  c 0 0 2
.bg-dots-gray
  bg url('/images/modules/site/patterns/dots-small.svg') base(2)
  background-blend-mode color-burn
.bg-green
  octicon base(1)
.bg-yellow-light
  c v("yellow")
.selected-color-white
  c fg("light")

.rounded-1, .box-shadow, .Box
  for $direction in top left right bottom
    $x = 'border-' + $direction
    .{$x}
      {$x} 1px solid base(1) $i
