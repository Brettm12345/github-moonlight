$fgColors = {
  gray-light: fg("dark")
  blue: $blue
  blue-mktg: $blue
  gray: fg("primary")
  gray-dark: fg("light")
  emphasized: fg("secondary")
  green: $green
  purple: $purple
  red: $red
  white: fg("light")
}
map-record($fgColors, '.text-', color)
$borderColors = {
  blue-light: $blue
  gray-dark: base(1)
  lg-left: base(1)
  lg-top: base(6)
}
map-record($borderColors, '.border-', border-color)
$bgColors = {
  gray: base(4)
  gray-light: base(3)
  blue-light: base(4)
  yellow-light: t("yellow")
  purple-light: t("purple")
  purple: $purple
  red: $red
  green: $green
  blue: base(7)
  blue-2: t("blue")
  gray-dark: base(2)
  gray-2: base(7)
  white: base(5)
  pending: $purple
}
map-record($bgColors, '.bg-', background-color)
for $direction in top left right bottom
  $x = 'border-' + $direction
  .{$x}
    {$x} 1px solid base(5) $i
.border
  b $b
.text
  c fg("faded")
div[style*="#fcfdfd"]
  c 0 0 base(4)
g[fill="#23292f"] + path
  vc base(9)
g, path
  &[fill="#eee"]
    vc base(7)
  &[stroke="#23292f"]
    vc 0 fg("primary")
  &[fill="#23292f"]
    vc fg("primary")
section[style*="#fafbfc"]
  c 0 0 base(2)
.bg-dots-gray
  bg url('/images/modules/site/patterns/dots-small.svg') base(2)
  background-blend-mode color-burn
