$fgColors = {
  gray-light: fg("dark")
  blue: $blue
  gray: fg("primary")
  gray-dark: fg("light")
  emphasized: fg("secondary")
  green: $green
  purple: $purple
  red: $red
  white: fg("light")
}
map-record($fgColors, '.text-', color)
$borderColors = {
  blue-light: $blue
  gray-dark: base(1)
  lg-left: base(1)
}
map-record($borderColors, '.border-', border-color)
$bgColors = {
  gray: base(4)
  gray-light: base(4)
  blue-light: base(4)
  yellow-light: t("yellow")
  purple-light: t("purple")
  blue: base(7)
  blue-2: t("blue")
  gray-dark: base(2)
  gray-2: base(7)
  white: base(5)
  pending: $purple
}
map-record($bgColors, '.bg-', background-color)
for $direction in top left right bottom
  $x = 'border-' + $direction
  .{$x}
    {$x} 1px solid base(5) $i
.border
  b $b
.text
  c fg("faded")
div[style*="#fcfdfd"]
  c 0 0 base(4)
path[fill="#eee"]
  vc base(7)
section[style*="#fafbfc"]
  c 0 0 base(2)
