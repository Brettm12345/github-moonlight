.Box > .bg-gray-dark:nth-child(2):last-of-type
  c fg("primary") 1 3
.CheckStep
  $ansi = {
    b: 'indigo'
    r: 'red'
    g: 'green'
    y: 'yellow'
    bl: 'blue'
    m: 'purple'
    c: 'cyan'
    w: 'text-primary'
    gr: 'text-dark'
  }
  for $k, $v in $ansi
    & .ansibg-{$k}
      c 0 0 v($v)
    & .ansifg-{$k}
      c v($v)
  colors(
    {
      command: 'blue'
      debug: 'purple'
      error: 'red'
      verbose: 'text-dark'
      warning: 'yellow'
      section: 'teal'
    },
    "log-line-"
  )
  &-header
    c fg("dark")
    &-timestamp
      c fg("secondary")
  &-line
    c fg("primary") 0 2
    set-font "mono"
    &:hover &-number
      c fg("primary")
    &:hover, &:hover &-number
      c 0 0 5
    & &-timestamp
      c fg("secondary")
    &-number
      c 9 1 2
      ease colors
    &content
      c fg("primary")
    +selected()
      c 0 0 6
.CheckRun
  c 0 1 3
  &-search .btn
    &, &[disabled], &[disabled]:hover
      c 0 0 2
  &-log-title
    c fg("secondary")
  &-header
    c 0 1
    &-timestamp
      c fg("dark")
.checks-list-item
  &.bg-white
    c 0 0 $t
  &.selected &-name
    c fg("light") 0 8
.d-flex[style*="opacity: 0.6"]
  o 1
.js-checks-log-display-container
  bd $b
aside[aria-label="Check suites"]
  btc 1
